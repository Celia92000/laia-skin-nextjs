{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "outputDirectory": ".next",
  "functions": {
    "src/app/api/cron/daily-emails/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/daily-whatsapp/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/sync-emails/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/process-payments/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/generate-monthly-invoices/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/cron/send-payment-reminders/route.ts": {
      "maxDuration": 180
    },
    "src/app/api/cron/check-tokens/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/check-sla/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/cron/send-reminders/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/cron/send-review-requests/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/cron/birthday-emails/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/cron/publish-scheduled-posts/route.ts": {
      "maxDuration": 60
    },
    "src/app/api/cron/send-whatsapp-reminders/route.ts": {
      "maxDuration": 120
    },
    "src/app/api/cron/send-whatsapp-reviews/route.ts": {
      "maxDuration": 120
    }
  },
  "crons": [
    {
      "path": "/api/cron/send-payment-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/check-sla",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/generate-monthly-invoices",
      "schedule": "0 0 1 * *"
    },
    {
      "path": "/api/cron/process-payments",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/daily-emails",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/daily-whatsapp",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/sync-emails",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/send-reminders",
      "schedule": "0 18 * * *"
    },
    {
      "path": "/api/cron/send-review-requests",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/cron/birthday-emails",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/check-tokens",
      "schedule": "0 */6 * * *"
    },
    {
      "path": "/api/cron/publish-scheduled-posts",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/send-whatsapp-reminders",
      "schedule": "0 17 * * *"
    },
    {
      "path": "/api/cron/send-whatsapp-reviews",
      "schedule": "0 15 * * *"
    }
  ]
}