# ============================================
# BASE DE DONNÉES
# ============================================
# Connexion poolée (pgBouncer) pour les requêtes rapides - PORT 6543
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@aws-1-eu-west-3.pooler.supabase.com:6543/postgres?pgbouncer=true&connection_limit=5&pool_timeout=15&connect_timeout=10"
# Connexion directe pour les migrations et requêtes complexes - PORT 5432
DIRECT_URL="postgresql://postgres.YOUR_PROJECT_ID:YOUR_PASSWORD@aws-1-eu-west-3.pooler.supabase.com:5432/postgres"

# ============================================
# SÉCURITÉ & AUTHENTIFICATION
# ============================================
# JWT Secret pour les tokens (générer avec: openssl rand -base64 64)
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-min-32-chars"

# Clé de chiffrement pour les API tokens (générer avec: openssl rand -hex 32)
ENCRYPTION_KEY="your-encryption-key-here-64-hex-chars"

# ============================================
# EMAIL
# ============================================
# Resend API (envoi d'emails transactionnels)
RESEND_API_KEY="re_..."
RESEND_FROM_EMAIL="Votre Institut <contact@votre-domaine.fr>"
# RESEND_WEBHOOK_SECRET="votre_secret_webhook_ici"

# Synchronisation IMAP (optionnel - pour récupérer les emails reçus)
EMAIL_USER="contact@votre-domaine.fr"
EMAIL_PASSWORD="your-email-password"

# ============================================
# WHATSAPP (Meta Business API)
# ============================================
WHATSAPP_ACCESS_TOKEN="EAAxxxxx"
WHATSAPP_PHONE_NUMBER_ID="123456789"
WHATSAPP_BUSINESS_ACCOUNT_ID="123456789"
