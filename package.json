{
  "name": "laia-connect",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001 --turbopack",
    "dev:webpack": "next dev -p 3001",
    "build": "prisma generate && next build",
    "build:vercel": "NODE_OPTIONS='--max-old-space-size=4096' prisma generate && NODE_OPTIONS='--max-old-space-size=4096' next build",
    "start": "next start -p 3001",
    "seed": "tsx prisma/seed.ts",
    "export": "next build && next export",
    "deploy": "next build && touch out/.nojekyll && echo 'laiaconnect.fr' > out/CNAME",
    "postinstall": "prisma generate",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:smoke": "playwright test tests/e2e/smoke.spec.ts",
    "test:e2e:ci": "playwright test --reporter=html",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test": "npm run test:unit && npm run test:e2e",
    "cleanup:temp": "tsx scripts/cleanup-temp-files.ts"
  },
